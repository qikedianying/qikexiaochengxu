.border-danger {
  border: 1rpx solid #ff5a60;
}

.text-danger {
  color: #ff5a60;
}

.border-default {
  border: 1rpx solid #eee;
}

.button {
  color: #999;
  font-size: 34rpx;
  background: none;
  padding: 0;
  border: none;
  line-height: normal;
  border-radius: 0;
}

.bottom-line {
  border-bottom: 2rpx solid #F6F6F6;
}

.bottom-line-20 {
  border-bottom: 20rpx solid #F6F6F6;
}

.top-line {
  border-top: 2rpx solid #f6f6f6;
}

.btn-block {
  width: 100%;
}

.btn {
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-danger {
  background: #F43E42;
}

.btn-round {
  border-radius: 44rpx;
}

.placeholder-style {
  font-size: 32rpx;
  font-weight: 400;
  color: #979797;
}

.hover-default {
  background: #fff;
  color: #666;
}

.invite-button {
  height: 88rpx;
  border-radius: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  color: #fff;
  background: linear-gradient(to right, #E9CA97, #CF9B5D);
}
.default-button{
  height: 88rpx;
  border-radius: 8rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  color: #fff;
  background: #333;
}
.tag {
  padding: 0 4rpx;
  color: #D7A148;
  border-radius: 6rpx;
  font-size: 20rpx;
  border: 2rpx solid #D7A148;
}

.tag-plain {
  background: #D7A148;
  color: #fff;
}

.full-width {
  width: 100%;
}

.full-height {
  height: 100%;
}

.relative {
  position: relative;
}

.mpm-radio-icon {
  color: #CF9B5D !important;
  font-size: 32rpx !important;
}
.over-hidden{
  overflow: hidden;
}
