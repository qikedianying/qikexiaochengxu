page{
  height: 100%;
}
.page{
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 80rpx;
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.font-image{
  width: 288rpx;
  height: auto;
}
.login-button{
  border-radius: 20rpx;
  color: #dd3e52;
}
.bottom-box{
  width: 80%;
}
.submit{
  width: 80%;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
  background: #423a6f;
}
