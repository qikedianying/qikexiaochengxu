page {
  height: 100%;
  background: #fff;
}

.swiper {
  height: 100%;
}

.swiper-item {
  padding: 60rpx;
  padding-top: 40rpx;
  padding-bottom: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 100%;
  box-sizing: border-box;
}

.box {
  width: 100%;
  box-sizing: border-box;
  height: 100%;
  overflow: hidden;
  background: #fff;
  border-radius: 24rpx;
}
.icon-box{
  position: fixed;
  padding: 20rpx;
  bottom: 0;
  left: 0;
  width: 100%;
  animation: opcityChange 2s infinite;
}
.down-icon{
  width: 40rpx;
  height: auto;
}


@keyframes opcityChange {
  0%   {opacity: 0;}
  25% {opacity: .75;}
  50%  {opacity: 1;}
  75% {opacity: .75;}
  100% {opacity: 0;}
}
.fix-top{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
