@import "../../../wxss/index.wxss";
.box{
  position: relative;
  width: 250rpx;
  height: 360rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  overflow: hidden;
}
.avatar{
  width: 250rpx;
  height: 360rpx;
}
.info{
  /*height: 100rpx;*/
  position: absolute;
  background: rgba(0, 0, 0, .8);
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  bottom: 0;
  color: #fff;
  font-size: 24rpx;
}
